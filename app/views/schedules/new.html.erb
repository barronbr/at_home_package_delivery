<!-- Validation failure messages -->

<% if @schedule.errors.any? %>
  <% @schedule.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Schedule</h3>
      </div>
      <div class="panel-body">
        <form action="/create_schedule" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for user_id -->
<!--           <div class="form-group">
            <label for="user_id" class="col-sm-2 control-label">
              User
            </label>
            <div class="col-sm-10">
              <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @schedule.user_id %>">
            </div>
          </div> -->

          <!-- Label and input for start_time -->
          <div class="form-group">
            <label for="start_time" class="col-sm-2 control-label">
              Time I'll Leave Home
            </label>
            <div class="col-sm-10">
            <select name="start_time">
              <option value="5:00">5:00am</option>
              <option value="6:00">6:00am</option>
              <option value="7:00">7:00am</option>
              <option value="8:00">8:00am</option>
              <option value="9:00">9:00am</option>
              <option value="10:00">10:00am</option>
              <option value="11:00">11:00am</option>
              <option value="12:00">12:00pm</option>
              <option value="13:00">1:00pm</option>
              <option value="14:00">2:00pm</option>
              <option value="15:00">3:00pm</option>
              <option value="16:00">4:00pm</option>
              <option value="17:00">5:00pm</option>
              <option value="18:00">6:00pm</option>
              <option value="19:00">7:00pm</option>
              <option value="20:00">8:00pm</option>
              <option value="21:00">9:00pm</option>
              <option value="22:00">10:00pm</option>
            </select>

            </div>
          </div>

          <!-- Label and input for end_time -->
          <div class="form-group">
            <label for="end_time" class="col-sm-2 control-label">
              Time I'll Come Home
            </label>
            <div class="col-sm-10">
            <select name="end_time">
              <option value="5:00">5:00am</option>
              <option value="6:00">6:00am</option>
              <option value="7:00">7:00am</option>
              <option value="8:00">8:00am</option>
              <option value="9:00">9:00am</option>
              <option value="10:00">10:00am</option>
              <option value="11:00">11:00am</option>
              <option value="12:00">12:00pm</option>
              <option value="13:00">1:00pm</option>
              <option value="14:00">2:00pm</option>
              <option value="15:00">3:00pm</option>
              <option value="16:00">4:00pm</option>
              <option value="17:00">5:00pm</option>
              <option value="18:00">6:00pm</option>
              <option value="19:00">7:00pm</option>
              <option value="20:00">8:00pm</option>
              <option value="21:00">9:00pm</option>
              <option value="22:00">10:00pm</option>
            </select>
            </div>
          </div>



          <!-- Label and input for date -->
          <div class="form-group">
            <label for="date" class="col-sm-2 control-label">
              Date
            </label>

            <div class='input-group date' id='datetimepicker1'>
              <input type='text' class="form-control" name="date" id="date" value="<%= @schedule.date %>">
              <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
              </span>
            </div>

          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Schedule
              </button>
              or
              <a href="/schedules">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

